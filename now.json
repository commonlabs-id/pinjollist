{
  "name": "pinjollist",
  "alias": "pinjollist.now.sh",
  "version": 2,
  "env": {
    "FIREBASE_API_KEY": "@firebase-api-key",
    "FIREBASE_AUTH_DOMAIN": "@firebase-auth-domain",
    "FIREBASE_DATABASE_URL": "@firebase-database-url",
    "FIREBASE_PROJECT_ID": "@firebase-project-id",
    "FIREBASE_STORAGE_BUCKET": "@firebase-storage-bucket",
    "FIREBASE_SENDER_ID": "@firebase-sender-id"
  },
  "routes": [
    { "src": "^/api/companies", "dest": "/api/routes/companies.ts" },
    { "src": "^/api/ping", "dest": "/api/routes/ping.ts" },
    {
      "src": "^/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/static/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/www/$1"
    }
  ],
  "builds": [
    {
      "src": "api/routes/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "15mb" }
    },
    { "src": "www/package.json", "use": "@now/static-build", "config": { "distDir": "out" } }
  ]
}
