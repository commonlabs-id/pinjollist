{
  "name": "pinjollist",
  "alias": "pinjollist.now.sh",
  "version": 2,
  "regions": ["sin1"],
  "env": {
    "FIREBASE_PROJECT_ID": "@firebase-project-id",
    "FIREBASE_PRIVATE_KEY_BASE64": "@firebase-private-key-base64",
    "FIREBASE_CLIENT_EMAIL": "@firebase-client-email"
  },
  "build": {
    "env": {
      "GOOGLE_ANALYTICS": "@google-analytics"
    }
  },
  "routes": [
    {
      "src": "^/api/companies$",
      "dest": "/api/routes/companies.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "^/api/ping$",
      "dest": "/api/routes/ping.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "^/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/www/static/$1"
    },
    {
      "src": "^/static/images/favicon.ico",
      "dest": "/www/static/images/favicon.ico"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/www/static/images/favicon.ico"
    },
    {
      "src": "^/(.*)",
      "dest": "/www/$1",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff"
      }
    }
  ],
  "builds": [
    {
      "src": "api/routes/*.ts",
      "use": "@now/node",
      "config": { "maxLambdaSize": "20mb" }
    },
    { "src": "www/next.config.js", "use": "@now/next" }
  ]
}
