{
  "name": "pinjollist",
  "alias": "pinjollist.now.sh",
  "version": 2,
  "env": {
    "API_URL": "@api-url",
    "FIREBASE_API_KEY": "@firebase-api-key",
    "FIREBASE_AUTH_DOMAIN": "@firebase-auth-domain",
    "FIREBASE_DATABASE_URL": "@firebase-database-url",
    "FIREBASE_PROJECT_ID": "@firebase-project-id",
    "FIREBASE_STORAGE_BUCKET": "@firebase-storage-bucket",
    "FIREBASE_SENDER_ID": "@firebase-sender-id"
  },
  "routes": [
    {
      "src": "/api/companies",
      "dest": "/api/routes/companies.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/api/ping",
      "dest": "/api/routes/ping.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "^/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/api-docs/static/$1"
    },
    {
      "src": "^/static/images/favicon.ico",
      "dest": "/api-docs/static/images/favicon.ico"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/api-docs/$1",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "^/(.*)",
      "dest": "/api-docs/$1",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff"
      }
    }
  ],
  "builds": [
    {
      "src": "api/routes/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "15mb" }
    },
    { "src": "api-docs/package.json", "use": "@now/next" }
  ]
}
